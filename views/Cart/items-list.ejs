<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel='stylesheet' href='/Content/cart.css'/> <!-- Link to your custom CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"/> <!-- Font Awesome for icons -->
    <title>Cart</title>
</head>
<%- include ../partials/head%> 

<%- include ../partials/mainNavBar%> 

<body>
    <main class="container">
        <div class="row">
            <div class="col-16">
                <h1 class="title_ItemsList"><%= title %></h1>
                <br>
                <% if (itemsList.length > 0) { %>
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th class="text-center">Items</th>
                                <th class="text-center">Price</th>
                                <th class="text-center">Colour</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% itemsList.forEach(item => { %>
                                <tr>
                                    <td class="text-center name-column"><%= item.Name %></td>
                                    <td class="text-center">$<%= item.Price %></td>
                                    <td class="text-center"><%= item.Colour %></td>
                                    <td class="text-center">
                                        <a href="/cart/edit/<%= item._id %>" class="btn btn-primary btn-sm">
                                            <i class="fas fa-edit"></i> Edit
                                        </a>

                                        <button onclick="deleteItem('<%= item._id %>')" class="btn btn-danger btn-sm">
                                          Delete
                                        </button>

                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                    <div class="text-center">
                        <a href="/checkout" class="btn btn-success">Proceed to Checkout</a>
                    </div>
                <% } else { %>
                    <div class="text-center">
                        <p>Your cart is empty.</p>
                        <a href="/products" class="btn btn-primary">Start Shopping</a>
                    </div>
                <% } %>
            </div>
        </div>
    </main>

    <script>
    function deleteItem(itemId) {
        if (confirm('Are you sure you want to delete this item?')) {
            fetch('/items-list/delete/' + itemId, {
                method: 'DELETE'
            }).then(response => {
                if (response.ok) {
                    window.location.reload(); // Reload the page to see the changes
                } else {
                    alert('Error deleting item');
                }
            }).catch(error => {
                console.error('Error:', error);
                alert('An error occurred while deleting the item');
            });
        }
    }
</script>

</body>
</html>
